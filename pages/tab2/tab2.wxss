} */

.totalprice-view {
  justify-content: right;
  text-align: right;
}

.order-btn {
  height: 100%;
  width: 240rpx;
  background-color: #F77938;
  float: right;
  text-align: center;
  color: white;
  align-items: center;
  justify-content: center;
  display: flex;
}
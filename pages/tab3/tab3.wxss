page {
    background-color: #f8f8f8;
}

.hidden {
    display: none;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 30rpx;
}

.userinfo-avatar {
    width: 148rpx;
    height: 148rpx;
    margin: 20rpx;
    border-radius: 50%;
    overflow: hidden;
}

.userinfo-nickname {
    color: #aaa;
}

.btn-login {
    margin: 100rpx 50rpx 20rpx 50rpx;
    box-sizing: border-box;
}

.btn-logout {
    margin: 100rpx 50rpx 20rpx 50rpx;
    box-sizing: border-box;
}
<!-- pages/tab3/tab3.wxml -->
<view class="userinfo">
  <open-data class="userinfo-avatar" type="userAvatarUrl"></open-data>
  <open-data class="userinfo-nickname" type="userNickName"></open-data>
</view>
<block wx:if="{{token==null}}">
  <view>
    <zan-cell-group class="zan-cell-group">
      <view class="divider" />
      <zan-field title="账号" value="{{username}}" placeholder="fcnxxx"  bind:change="onUsernameChanged"></zan-field>
      <zan-field title="密码" value="{{password}}" inputType="password" placeholder="初始密码123456"  bind:change="onPasswordChanged"></zan-field>
      <view class="divider" />
    </zan-cell-group>
  </view>
  <button class="btn-login" bindtap="clickLogin">登录</button>
</block>
<block wx:else>
  <view class="divider" />
  <zan-field disabled="true" title="余额" value="{{money}}"></zan-field>
  <button class="btn-logout" type='warn' bindtap="clickLogout">退出</button>
</block>